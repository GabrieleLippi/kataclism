{
  "name": "kataclism",
  "version": "1.0.5",
  "description": "Bootstrapper for code kata in JavaScript",
  "keywords": [
    "code kata",
    "kata",
    "javascript kata",
    "typescript kata"
  ],
  "homepage": "https://github.com/glippi/kataclism#readme",
  "bugs": {
    "url": "https://github.com/glippi/kataclism/issues"
  },
  "license": "MIT",
  "author": "Gabriele Lippi",
  "main": "dist/index.js",
  "bin": {
    "kataclism": "dist/index.js"
  },
  "files": [
    "/dist",
    "templates/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "test:once": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "prettier": "npx prettier --write --list-different --parser typescript \"src/**/*.ts\"",
    "publish": "build && npm publish"
  },
  "jest": {
    "roots": [
      "src/",
      "test"
    ],
    "testMatch": [
      "/__tests__/.*\\.(ts|tsx|js)",
      "**/?(*.)(spec|test).ts?(x)"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "/node_modules",
      "/templates",
      "/bowling-kata"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier-eslint --write",
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "cac": "^6.4.2",
    "chalk": "^2.4.2",
    "inquirer": "^6.2.2",
    "shelljs": "^0.8.3"
  },
  "devDependencies": {
    "@types/inquirer": "^0.0.43",
    "@types/jest": "^24.0.6",
    "@types/jest-diff": "^20.0.1",
    "@types/node": "^11.9.4",
    "@types/shelljs": "^0.8.3",
    "@typescript-eslint/eslint-plugin": "^1.4.2",
    "@typescript-eslint/parser": "^1.4.2",
    "eslint": "^5.15.1",
    "eslint-config-prettier": "^4.1.0",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "prettier-eslint-cli": "^5.0.0",
    "ts-jest": "^23.10.5",
    "ts-node": "^8.0.2",
    "typescript": "^3.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/glippi/kataclism.git"
  }
}
