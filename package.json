{
  "name": "",
  "version": "1.0.0",
  "description": "Kata bootstrapped with kataclism",
  "main": "src/index.ts",
  "scripts": {
    "start": "npm run build:live",
    "build": "tsc -p .",
    "build:live": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "test": "jest",
    "watch": "jest --watchAll"
  },
  "jest": {
    "roots": [
      "src/",
      "test"
    ],
    "testMatch": [
      "/__tests__/.*\\.(ts|tsx|js)",
      "**/?(*.)(spec|test).ts?(x)"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "dependencies": {
    "@types/jest-diff": "^20.0.1",
    "cac": "^6.4.2",
    "chalk": "^2.4.2",
    "fs-extra": "^7.0.1",
    "path": "^0.12.7",
    "shelljs": "^0.8.3"
  },
  "devDependencies": {
    "@types/jest": "^24.0.3",
    "@types/node": "^11.9.4",
    "@types/shelljs": "^0.8.3",
    "@types/typescript": "^2.0.0",
    "jest": "^24.1.0",
    "nodemon": "^1.18.10",
    "ts-jest": "^23.10.5",
    "ts-node": "^8.0.2",
    "typescript": "^3.3.3"
  }
}
