{
  "name": "kataclism",
  "version": "1.0.0",
  "description": "Bootstrapper for code kata in JavaScript",
  "keywords": [
    "code kata",
    "kata",
    "javascript kata",
    "typescript kata"
  ],
  "homepage": "https://github.com/GabrieleLippi/kataclism#readme",
  "bugs": {
    "url": "https://github.com/GabrieleLippi/kataclism/issues"
  },
  "license": "MIT",
  "author": "Gabriele Lippi",
  "bin": {
    "kataclism": "./index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GabrieleLippi/kataclism.git"
  },
  "scripts": {
    "test": "jest",
    "watch": "jest --watchAll"
  },
  "dependencies": {
    "@types/node": "^11.9.4",
    "cac": "^6.4.2",
    "caporal": "^1.1.0",
    "chalk": "^2.4.2",
    "commander": "^2.19.0",
    "fs-extra": "^7.0.1",
    "path": "^0.12.7",
    "shelljs": "^0.8.3"
  },
  "jest": {
    "roots": [
      ".",
      "src/",
      "test"
    ],
    "testMatch": [
      "/__tests__/.*\\.(ts|tsx|js)",
      "**/?(*.)(spec|test).ts?(x)"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "devDependencies": {
    "@types/jest": "^24.0.3",
    "@types/typescript": "^2.0.0",
    "jest": "^24.1.0",
    "nodemon": "^1.18.10",
    "ts-jest": "^23.10.5",
    "ts-node": "^8.0.2",
    "typescript": "^3.3.3"
  }
}
